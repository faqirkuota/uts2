<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity">
    <TextView
            android:id="@+id/Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Covid"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.065"/>
    <TextView
            android:id="@+id/Judul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indonesia"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#7d0000"
            android:textStyle="bold"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.053" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="412dp"
            android:layout_height="606dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/Judul2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/home_layout">
        <TextView
                android:id="@+id/Judul3"
                android:layout_width="126dp"
                android:layout_height="40dp"
                android:text="Create Kota"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#7d0000"
                android:textStyle="normal"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.05" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>
        <EditText
                android:id="@+id/inpIdKota"
                android:layout_width="369dp"
                android:layout_height="37dp"
                android:inputType="numberDecimal"
                android:hint="Masukan ID Kota"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/home_layout"
                android:padding="4dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.325"
                app:layout_constraintTop_toBottomOf="@+id/Judul3" android:layout_marginTop="28dp"/>
        <EditText
                android:id="@+id/inpNamaKota"
                android:layout_width="369dp"
                android:layout_height="37dp"
                android:hint="Masukan Nama Kota"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/home_layout"
                android:padding="4dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.325"
                app:layout_constraintTop_toBottomOf="@+id/inpIdKota" android:layout_marginTop="28dp"/>
        <Button
                android:text="Create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/onCreate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintTop_toBottomOf="@+id/inpNamaKota" android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>